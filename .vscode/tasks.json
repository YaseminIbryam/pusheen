{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}\\sdlwrapper.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",

                //LIBRARY SEARCH PATH
                "-LC:/libraries/SDL2/lib",
                
                //INCLUDE PATH
                "-IC:/libraries/SDL2/include/SDL2",
                
                //LINKER FLAGS
                "-lmingw32",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-mwindows",
                "-lSDL2main", // Entry point handler
                "-lSDL2",     // Core SDL library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}